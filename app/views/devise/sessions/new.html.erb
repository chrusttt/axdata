<%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.inputs "Sign in" do %>
  	<%= f.input :email, as: :email %>
  	<%= f.input :password %>
  	<%= f.input :remember_me, as: :boolean, label: false %> 
  <% end %>
  <%= f.actions do %>
  	<%= f.action :submit, label: "Sign in" %>
  	<% end%>
<% end %>

<%= render "devise/shared/links" %>
