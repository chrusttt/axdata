<div class="row-fluid">
    <div class="span8">
    <% if can? :create, Sample %>
    <%= link_to 'New Sample', new_sample_path, class: 'btn btn-info pull-right' %>
        <h2>Samples</h2>
    <%end%>
<table class="table table-bordered">
 <thead> 
    <th>Picture</th>
    <th><%= sort_link @search, :name, "Name" %></th>
    <th><%= sort_link @search, :description, "Description" %></th>
    <th><%= sort_link @search, :state, "State" %></th>
    <th><%= sort_link @search, :date, "Date" %></th>
    <th><%= sort_link @search, :user, "User" %></th>
    <th></th>
</thead>
<tbody>
<%= render @samples %>
</tbody>
</table>

<br />


</div>
<div class="span4">


<h2>Filters</h2>
<%= search_form_for @search, url: advanced_search_samples_path, method: :post do |f| %>
  <%= f.condition_fields do |c| %>
    <%= render "condition_fields", f: c %>
  <% end %>

  <p><%= link_to_add_fields "Add Conditions", f, :condition %></p>
    <br />
    <%= f.submit "Search", class: 'btn btn-primary' %>
<%end%>
</div>
