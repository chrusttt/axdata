<%= semantic_form_for @experiment do |f| %>
  <%= f.inputs "New experiment" do %>
    <%= f.input :name %>
    <%= f.input :description, input_html: { rows: 8} %>
    <%end%>
    <%=f.inputs "Samples" do%>
    <input type="text" value="" name="q" id="q"  />
    <%= f.input :samples, label: false,  :as => :select,      :collection => Sample.all, wrapper_html: { id: "samples_collection"} %>
    <%end%>
  <%= f.actions do %>
   <%= f.action :submit %>
  <%end%>
<%end%>